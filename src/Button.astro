---
export interface Props {
  variant?: "solid" | "outline";
  size?: "sm" | "md";
}

const {
  variant = "solid",
  size = "md",
} = Astro.props;
---

<button class={`clustar-btn ${variant} ${size}`}>
  <slot />
</button>

<style>
  .clustar-btn {
    font: inherit;
    border-radius: 0.75rem;
    padding: 0.5rem 0.9rem;
    cursor: pointer;
    transition: 120ms ease;
  }

  .clustar-btn.solid {
    background: #111;
    color: #fff;
    border: 1px solid #111;
  }

  .clustar-btn.outline {
    background: transparent;
    color: #111;
    border: 1px solid #111;
  }

  .clustar-btn.sm { font-size: 0.875rem; }
  .clustar-btn.md { font-size: 1rem; }

  .clustar-btn:hover {
    transform: translateY(-1px);
  }
</style>
