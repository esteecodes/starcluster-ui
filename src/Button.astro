---
export interface Props {
  variant?: "solid" | "outline";
  size?: "sm" | "md";
}

const { variant = "solid", size = "md" } = Astro.props;
---

<button class={`scui-btn ${variant} ${size}`}>
  <slot />
</button>

<style>
  .scui-btn {
    font: inherit;
    border-radius: 0.75rem;
    padding: 0.5rem 0.9rem;
    cursor: pointer;
    transition: 120ms ease;
  }

  .scui-btn.solid {
    background: #111;
    color: #fff;
    border: 1px solid #111;
  }

  .scui-btn.outline {
    background: transparent;
    color: #111;
    border: 1px solid #111;
  }

  .scui-btn.sm { font-size: 0.875rem; }
  .scui-btn.md { font-size: 1rem; }

  .scui-btn:hover {
    transform: translateY(-1px);
  }
</style>
